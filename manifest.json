{
  "manifest_version": 3,
  "name": "Screen Capture",
  "version": "1.0",
  "description": "Screen Capture Extension",

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "downloads"
  ],
  "background": {
    "service_worker": "background.js"
  }
}